<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity2"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    android:scrollbars="none"
    android:background="#F0F0ED">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo3"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <LinearLayout
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:textColor="#000000"
                    android:layout_gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal Details :-"/>
        <AutoCompleteTextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autofillHints="Name"
            android:ems="10"
            android:hint="Name"
            android:textColor="#000000"
            />


        <AutoCompleteTextView
            android:textColor="#000000"
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autofillHints="Username"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Email Id"
            android:inputType="textEmailAddress"
            />
                <TextView
                    android:textColor="#000000"
                    android:layout_gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile :-"/>
        <AutoCompleteTextView
            android:textColor="#000000"
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autofillHints="Username"
            android:ems="10"
            android:hint="Mobile number"
            android:inputType="number"
            />

        <AutoCompleteTextView
            android:textColor="#000000"
            android:id="@+id/alternate_mobile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autofillHints="Username"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Alternate Mobile number"
            android:inputType="number"
            />

        <TextView
            android:textColor="#000000"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address :-"/>

        <AutoCompleteTextView
            android:textColor="#000000"
            android:id="@+id/address1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="Username"
            android:ems="10"
            android:hint="House/Flat no, Wing"
            android:inputType="textPostalAddress"
            />

        <AutoCompleteTextView
            android:textColor="#000000"
            android:id="@+id/address2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="Username"
            android:ems="10"
            android:hint="Apartment/Area"
            android:inputType="textPostalAddress"
            />

        <AutoCompleteTextView
            android:layout_marginBottom="10dp"
            android:id="@+id/address3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="Username"
            android:ems="10"
            android:textColor="#000000"
            android:hint="Road, City"
            android:inputType="textPostalAddress"
            />
                <TextView
                    android:textColor="#000000"
                    android:layout_gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set Password :-"/>
        <EditText
            android:textColor="#000000"
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autofillHints=""
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"/>

                <TextView
                    android:textColor="#000000"
                    android:textSize="10dp"
                    android:layout_marginTop="-5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password must contain atleast 6 charactors"/>

        <EditText
            android:textColor="#000000"
            android:id="@+id/password2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autofillHints=""
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create account"
        android:background="#6ca414"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>

