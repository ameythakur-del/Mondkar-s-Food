<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content"
    android:id="@+id/item_row"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:clickable="true"
            android:id="@+id/item_image_list"
            android:layout_width="150dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_gravity="right"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4">


        <TextView
            android:layout_weight="3.12"
            android:id="@+id/item_name_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

                <TextView
                        android:layout_marginRight="4dp"
                        android:layout_weight="0.88"
                        android:paddingTop="10dp"
                        android:id="@+id/price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="-1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/row_per"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/line"/>

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/original_price"
                    />

                <TextView
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/discount_percent"
                    android:textColor="#6ca414" />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="-1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/characteristic_taste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Characteristic taste" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  |  "/>

            <TextView
                android:id="@+id/delivers_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivers in" />

            </LinearLayout>

            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:id="@+id/quantity"
                app:textSize="5dp"
                android:layout_marginLeft="10dp"
                android:paddingTop="5dp"
                android:layout_width="100dp"
                android:layout_height="30dp"
                app:textColor="#000000"
                app:backGroundColor="#ac8d4e"
                android:layout_marginTop="-1dp"
                />
            <View
                android:layout_marginTop="8.5dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#c0c0c0"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <Button
                    android:id="@+id/add_to_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:text="Add to cart"
                    android:textAllCaps="false"
                    android:textColor="#000000" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#c0c0c0"/>

                <Button
                    android:id="@+id/buy_now"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:text="Buy now"
                    android:textAllCaps="false"
                    android:textColor="#000000"  />
            </LinearLayout>
            </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>